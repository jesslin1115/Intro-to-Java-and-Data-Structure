public class FindMax { 
	public static int findMax (int[] a) {
		int localMax=0;
 
		for(int i =1; i<a.length; i++){
			if(a[i]>a[localMax]){
				localMax = i; 
			}
		}
		return localMax;
	}
	
	public static void main(String[] args){
		int[] values = {55, 21, 6, 85, 6, 47}; 
		
		System.out.println(findMax(values));
	}


}
